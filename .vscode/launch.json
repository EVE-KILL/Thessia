{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "client: chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
            "args": ["dev", "--inspect", "--host", "0.0.0.0"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: bun nuxt",
            "runtimeExecutable": "bun",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
            "args": ["dev"],
            "env": {
                "NODE_OPTIONS": "--inspect"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "production build, bun nuxt",
            "runtimeExecutable": "bun",
            "outputCapture": "std",
            "program": "${workspaceFolder}/.output/server/index.mjs",
            "env": {
                "NODE_ENV": "production",
                "NODE_OPTIONS": "--inspect"
            },
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "fullstack: nuxt",
            "configurations": ["server: nuxt", "client: chrome"]
        },
        {
            "name": "fullstack: bun nuxt",
            "configurations": ["server: bun nuxt", "client: chrome"]
        }
    ]
}
